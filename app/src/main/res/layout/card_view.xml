<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/checkout_order_card_view"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:padding="@dimen/activity_vertical_margin"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ccbg"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:src="@drawable/chip" />

        <com.mac.creditcardapp.views.CCTextView
            android:id="@+id/card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chip"
            android:gravity="center"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="1234 4567 7890 1234"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_large" />

        <TextView
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_number"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/cvv_margin"
            android:text="1234"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_small"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:src="@drawable/mastercard" />

        <TextView
            android:id="@+id/name_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/address"
            android:layout_toLeftOf="@+id/icon"
            android:ellipsize="end"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:singleLine="true"
            android:text="1234 4567 7890 1234"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_toLeftOf="@+id/icon"
            android:ellipsize="end"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:singleLine="true"
            android:text="1234 4567 7890 1234"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_normal"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
